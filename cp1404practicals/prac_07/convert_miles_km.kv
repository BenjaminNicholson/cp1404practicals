BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.handle_calculation()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increments(1)
            Button:
                text: 'Down'
                on_press: app.handle_increments(-1)

#    Button:
#        text: 'Convert'
#        on_press: app.handle_calculation()
    Label:
        id: output_label
        font_size: 48
        text: app.message
